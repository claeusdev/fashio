<div class="wrapper">
  <div class="row cf">
    <div class="col-6">
      <div class="thumbnail">
        <%= image_tag(@product.image.large) %>
      </div>
    </div>
    <div class="col-6">
      <div class="prdt-caption">
        <h2><%= @product.name %></h2>
        <h4>BY <%= link_to @product.store.name %></h4>
        <h2 class="amount"><%= @product.price %></h2>
        <p>DESCRIPTION</p>
        <hr>
        <p><%= @product.description %></p>
        <div class="row cf">
          <div class="col-6">
            <a href="#" class="">Size</a>
          </div>
          <div class="col-6">
            <a href="#" class="">Quantity</a>
          </div>
        </div>
        <div class="cf">
          <a href="#" class="button">Add to cart</a>
          <a href="#" class="button">Buy Now</a>
        </div> <br>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
