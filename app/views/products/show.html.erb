<div class="wrapper">
  <div class="row cf">
    <div class="col-6">
      <div class="thumbnail">
        <%= image_tag(@product.image.large) %>
      </div>
    </div>
    <div class="col-6">
      <div class="prdt-caption">
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        <h2><%= @product.name %></h2>
        <h4>BY <%= link_to @product.store.name %></h4>
        <h2 class="amount"><%= @product.price %></h2>
        <p>DESCRIPTION</p>
        <hr>
        <p><%= @product.description %></p>
        <div class="row cf">
          <div class="col-6">
            <a href="#" class="">Size</a>
          </div>
          <div class="col-6">
            <a href="#" class="">Quantity</a>
          </div>
        </div>
        <div class="cf">
          <a href="#" class="button">Add to cart</a>
          <a href="#" class="button">Buy Now</a>
        </div> <br>
      </div>
    </div>
  </div>
  <div class="row cf">
    <div class="col-6">
        <p>Item Details</p>
    </div>
    <div class="col-6">
        <h2>Reviews</h2>
        <% if @reviews.blank? %>
          <!-- true -->
          <p>This item has not been reviewed yet.</p>
          <%= link_to "Add a review", new_product_review_path(@product), class: "button" %>
        <% else %>
          <!-- false -->
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.comment %></p>
            </div>
          <% end %>
          <br>
          <%= link_to "Add a review", new_product_review_path(@product), class: "button" %>
        <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
