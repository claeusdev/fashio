<div class="wrapper">
  <div class="center">
    <div class="sign-card">
      <h2>Fill out the form below to Join</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.text_field :email, required: true, autofocus: true, placeholder: "Your Email Address" %> <br>
        </div>
        <div class="form-inputs">
          <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Choose Password" %> <br>
        </div>
        <div class="form-inputs">
          <%= f.text_field :password_confirmation, required: true, placeholder: "Confirm Password" %>
        </div>
        <div class="form-actions">
          <%= f.submit "Sign up" , class: "button" %>
        </div>
      <% end %> <br>
      <p>Already have an account?</p><%= render "devise/shared/links" %>
    </div>
  </div>
</div>
